/* CSS Variables for easy customization */
:root {
    /* Color Theme */
    --timeline-top-color: #DC143C;      /* Person A - Red */
    --timeline-top-light: rgba(220, 20, 60, 0.1);
    --timeline-bottom-color: #1E90FF;   /* Person B - Blue */
    --timeline-bottom-light: rgba(30, 144, 255, 0.1);
    
    /* Background & Layout */
    --timeline-bg: #f8f9fa;
    --card-bg: #ffffff;
    --baseline-color: #333333;
    --modal-bg: rgba(0, 0, 0, 0.7);
    
    /* Typography */
    --font-family: 'Inter', 'Segoe UI', system-ui, sans-serif;
    --text-primary: #2c3e50;
    --text-secondary: #7f8c8d;
    
    /* Spacing */
    --card-radius: 10px;
    --card-shadow: 0 4px 12px rgba(0, 0, 0, 0.08);
    --card-shadow-hover: 0 8px 24px rgba(0, 0, 0, 0.12);
    
    /* Transitions */
    --transition-speed: 0.3s;
}

/* Base Styles */
* {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
}

body {
    font-family: var(--font-family);
    background: var(--timeline-bg);
    color: var(--text-primary);
    line-height: 1.6;
    overflow-x: hidden;
}

.container {
    max-width: 1400px;
    margin: 0 auto;
    padding: 20px;
}

/* Header */
header {
    text-align: center;
    margin-bottom: 40px;
    padding-bottom: 20px;
    border-bottom: 1px solid #e0e0e0;
}

header h1 {
    font-size: 2.5rem;
    font-weight: 700;
    color: var(--text-primary);
    margin-bottom: 10px;
}

header h1 i {
    margin-right: 15px;
    color: var(--timeline-top-color);
}

.subtitle {
    font-size: 1.1rem;
    color: var(--text-secondary);
    font-weight: 400;
    margin-bottom: 30px;
}

/* Controls */
.controls {
    display: flex;
    justify-content: space-between;
    align-items: center;
    flex-wrap: wrap;
    gap: 20px;
    margin-top: 20px;
}

.control-group {
    display: flex;
    gap: 10px;
}

.control-group button {
    background: white;
    border: 1px solid #ddd;
    border-radius: 6px;
    padding: 10px 15px;
    cursor: pointer;
    font-size: 1rem;
    transition: all var(--transition-speed);
    color: var(--text-primary);
}

.control-group button:hover {
    background: #f0f0f0;
    transform: translateY(-2px);
}

.legend {
    display: flex;
    gap: 30px;
}

.legend-item {
    display: flex;
    align-items: center;
    gap: 10px;
    font-weight: 500;
}

.legend-color {
    width: 20px;
    height: 20px;
    border-radius: 4px;
    display: inline-block;
}

.legend-color.top {
    background-color: var(--timeline-top-color);
}

.legend-color.bottom {
    background-color: var(--timeline-bottom-color);
}

/* Timeline Container */
.timeline-container {
    position: relative;
    min-height: 600px;
    margin: 40px 0;
}

/* Timeline Sections */
.timeline-section {
    position: relative;
    height: 250px;
}

.top-section {
    background: linear-gradient(to bottom, var(--timeline-top-light), transparent);
    border-radius: var(--card-radius) var(--card-radius) 0 0;
}

.bottom-section {
    background: linear-gradient(to top, var(--timeline-bottom-light), transparent);
    border-radius: 0 0 var(--card-radius) var(--card-radius);
}

.era-label {
    position: absolute;
    top: 20px;
    font-weight: 600;
    font-size: 1.2rem;
    padding: 8px 20px;
    border-radius: 20px;
    z-index: 10;
}

.top-section .era-label {
    left: 20px;
    background-color: var(--timeline-top-color);
    color: white;
}

.bottom-section .era-label {
    right: 20px;
    background-color: var(--timeline-bottom-color);
    color: white;
}

/* Timeline Track */
.timeline-track {
    position: absolute;
    top: 70px;
    left: 0;
    right: 0;
    height: 120px;
    overflow: hidden;
    cursor: grab;
    user-select: none;
}

.timeline-track:active {
    cursor: grabbing;
}

/* Timeline Cards */
.timeline-card {
    position: absolute;
    top: 50%;
    transform: translateY(-50%);
    width: 180px;
    background: var(--card-bg);
    border-radius: var(--card-radius);
    box-shadow: var(--card-shadow);
    padding: 15px;
    transition: all var(--transition-speed);
    cursor: pointer;
    z-index: 5;
}

.timeline-card:hover {
    transform: translateY(-50%) scale(1.05);
    box-shadow: var(--card-shadow-hover);
    z-index: 20;
}

.timeline-card.top {
    border-top: 4px solid var(--timeline-top-color);
}

.timeline-card.bottom {
    border-top: 4px solid var(--timeline-bottom-color);
}

.card-icon {
    font-size: 1.2rem;
    margin-bottom: 10px;
    display: inline-block;
    padding: 5px;
    border-radius: 6px;
}

.timeline-card.top .card-icon {
    color: var(--timeline-top-color);
    background-color: var(--timeline-top-light);
}

.timeline-card.bottom .card-icon {
    color: var(--timeline-bottom-color);
    background-color: var(--timeline-bottom-light);
}

.card-title {
    font-weight: 600;
    font-size: 0.95rem;
    margin-bottom: 8px;
    line-height: 1.3;
    height: 2.6em;
    overflow: hidden;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
}

.card-year {
    font-size: 0.85rem;
    color: var(--text-secondary);
    font-weight: 500;
}

.card-image {
    width: 100%;
    height: 80px;
    object-fit: cover;
    border-radius: 4px;
    margin-bottom: 10px;
    display: block;
}

/* Baseline */
.baseline-container {
    position: absolute;
    top: 50%;
    left: 0;
    right: 0;
    transform: translateY(-50%);
    height: 2px;
    background-color: var(--baseline-color);
    z-index: 1;
}

.baseline-line {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    height: 2px;
    background-color: var(--baseline-color);
}

.baseline-label {
    position: absolute;
    top: -25px;
    left: 50%;
    transform: translateX(-50%);
    background: var(--timeline-bg);
    padding: 5px 20px;
    font-weight: 600;
    color: var(--baseline-color);
    white-space: nowrap;
}

.era-markers {
    position: absolute;
    top: 15px;
    left: 0;
    right: 0;
    display: flex;
    justify-content: space-around;
}

.era-marker {
    background: rgba(51, 51, 51, 0.1);
    padding: 5px 15px;
    border-radius: 15px;
    font-size: 0.9rem;
    color: var(--baseline-color);
}

/* Modal */
.modal {
    display: none;
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-color: var(--modal-bg);
    z-index: 1000;
    animation: fadeIn var(--transition-speed);
}

@keyframes fadeIn {
    from { opacity: 0; }
    to { opacity: 1; }
}

.modal-content {
    position: relative;
    background-color: white;
    margin: 5% auto;
    width: 90%;
    max-width: 800px;
    border-radius: var(--card-radius);
    box-shadow: 0 20px 60px rgba(0, 0, 0, 0.3);
    animation: slideUp 0.4s;
}

@keyframes slideUp {
    from { transform: translateY(50px); opacity: 0; }
    to { transform: translateY(0); opacity: 1; }
}

.close-modal {
    position: absolute;
    right: 20px;
    top: 15px;
    font-size: 28px;
    font-weight: bold;
    color: var(--text-secondary);
    cursor: pointer;
    z-index: 10;
}

.close-modal:hover {
    color: var(--text-primary);
}

.modal-header {
    padding: 30px 30px 20px;
    border-bottom: 1px solid #eee;
}

#modal-title {
    font-size: 1.8rem;
    color: var(--text-primary);
    margin-bottom: 10px;
}

.modal-date {
    font-size: 1rem;
    color: var(--text-secondary);
    font-weight: 500;
}

.modal-body {
    display: flex;
    flex-direction: column;
    padding: 30px;
}

@media (min-width: 768px) {
    .modal-body {
        flex-direction: row;
        gap: 30px;
    }
}

.modal-image-container {
    flex: 0 0 300px;
    position: relative;
    border-radius: 8px;
    overflow: hidden;
    background: #f5f5f5;
    min-height: 200px;
}

#modal-image {
    width: 100%;
    height: auto;
    display: block;
    transition: opacity var(--transition-speed);
}

.image-fallback {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    color: #bbb;
    font-size: 1.2rem;
}

.image-fallback i {
    font-size: 3rem;
    margin-bottom: 10px;
}

.modal-details {
    flex: 1;
}

#modal-description {
    font-size: 1.1rem;
    line-height: 1.7;
    margin-bottom: 25px;
    color: var(--text-primary);
}

.modal-tags {
    display: flex;
    flex-wrap: wrap;
    gap: 10px;
    margin-bottom: 25px;
}

.tag {
    padding: 6px 12px;
    border-radius: 20px;
    font-size: 0.85rem;
    font-weight: 500;
    color: white;
}

.video-button {
    display: inline-flex;
    align-items: center;
    gap: 10px;
    background: #FF0000;
    color: white;
    padding: 12px 24px;
    border-radius: 30px;
    text-decoration: none;
    font-weight: 600;
    transition: all var(--transition-speed);
    margin-bottom: 25px;
}

.video-button:hover {
    background: #CC0000;
    transform: translateY(-2px);
}

.modal-meta {
    display: flex;
    gap: 30px;
    padding-top: 20px;
    border-top: 1px solid #eee;
}

.meta-item {
    display: flex;
    align-items: center;
    gap: 10px;
    color: var(--text-secondary);
}

.meta-item i {
    font-size: 1.2rem;
}

/* Footer */
footer {
    text-align: center;
    margin-top: 40px;
    padding-top: 20px;
    border-top: 1px solid #e0e0e0;
    color: var(--text-secondary);
    font-size: 0.9rem;
}

.instructions {
    font-style: italic;
    margin-top: 10px;
    font-size: 0.85rem;
}

/* Responsive */
@media (max-width: 768px) {
    .container {
        padding: 15px;
    }
    
    header h1 {
        font-size: 1.8rem;
    }
    
    .controls {
        flex-direction: column;
        align-items: flex-start;
    }
    
    .legend {
        width: 100%;
        justify-content: space-around;
    }
    
    .timeline-section {
        height: 200px;
    }
    
    .timeline-card {
        width: 150px;
        padding: 12px;
    }
    
    .card-title {
        font-size: 0.85rem;
    }
    
    .modal-content {
        margin: 10% auto;
        width: 95%;
    }
}